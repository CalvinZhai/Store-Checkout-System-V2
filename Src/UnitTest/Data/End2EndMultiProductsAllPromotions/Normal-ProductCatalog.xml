<Catalog>
    <Items>
        <Item>
            <Name>Apple</Name>
            <Price>1.0</Price>
            <!-- regular price -->
        </Item>
        <Item>
            <Name>Banana</Name>
            <Price>2.0</Price>
        </Item>
        <Item>
            <Name>Orange</Name>
            <Price>3.0</Price>
        </Item>
    </Items>

    <Promotions>
        <Promotion Name="OnSalePriced"          Rule=".8">
            <Items>
                <Item Name="Apple" />
