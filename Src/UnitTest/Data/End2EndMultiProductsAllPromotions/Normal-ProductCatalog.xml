        </Promotion>

        <Promotion Name="OnSaleOff"             Rule="40">
            <Items>
                <Item Name="Apple" />
            </Items>
        </Promotion>

        <Promotion Name="GroupPriced"           Rule="3-4.10">
            <Items>
                <Item Name="Banana" />
            </Items>
        </Promotion>

        <Promotion Name="GroupAdditionFree"     Rule="3-2">
            <Items>
                <Item Name="Banana" />
            </Items>
        </Promotion>

        <Promotion Name="GroupAdditionFree"     Rule="3-2">
            <Items>
                <Item Name="Orange" />
            </Items>
        </Promotion>

        <Promotion Name="GroupAdditionOff"      Rule="2-3-50">
            <Items>
                <Item Name="Orange" />
            </Items>
        </Promotion>
    </Promotions>
